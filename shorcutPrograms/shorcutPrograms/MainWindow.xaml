<Window x:Class="shorcutPrograms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shorcutPrograms"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="MissingFilesGrid" HorizontalAlignment="Left" Height="89" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" Background="#FFB4AFAF">
            <TextBox x:Name="FindMissingFilesTextBox1" HorizontalAlignment="Left" Height="23" Margin="56,10,0,0" TextWrapping="Wrap" Text="filePath" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="FindMissingFilesTextBox2" HorizontalAlignment="Left" Height="23" Margin="56,38,0,0" TextWrapping="Wrap" Text="filePath" VerticalAlignment="Top" Width="120"/>
            <Label Content="File 1" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
            <Label Content="File 2" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
            <Button Content="Find Missing Files" HorizontalAlignment="Left" Margin="56,66,0,0" VerticalAlignment="Top" Width="120" Click="findMissingFiles"/>
        </Grid>

    </Grid>
</Window>
